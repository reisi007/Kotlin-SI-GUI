                <font>
                    <Font name="Monospaced Regular" size="12.0" />
                </font>
                <padding>
                    <Insets right="7.0" />
                </padding>
            </Label>
            <Button fx:id="installFolderButton" alignment="CENTER" text="%options.choosefolder" GridPane.columnIndex="8" GridPane.columnSpan="2" GridPane.rowIndex="5" />
            <Label fx:id="shortcutCreationLabel" text="%options.shortcut.dir" wrapText="true" GridPane.columnSpan="5" GridPane.rowIndex="6" />
            <Label fx:id="shortcutCreationText" text="Set by code" textOverrun="LEADING_ELLIPSIS" wrapText="true" GridPane.columnIndex="5" GridPane.columnSpan="3" GridPane.rowIndex="6">
                <font>
                    <Font name="Monospaced Regular" size="12.0" />
                </font>
                <padding>
                    <Insets right="7.0" />
                </padding>
            </Label>
            <Button fx:id="shortcutCreationButton" alignment="CENTER" text="%options.choosefolder" GridPane.columnIndex="8" GridPane.columnSpan="2" GridPane.rowIndex="6" />
        </GridPane>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="closeButton" defaultButton="true" mnemonicParsing="false" text="%options.button.close" />
            </buttons>
        </ButtonBar>
    </bottom>
