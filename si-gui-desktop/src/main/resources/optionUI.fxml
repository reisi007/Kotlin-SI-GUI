                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <Label text="%option.downloadTypes" GridPane.columnSpan="4" />
            <CheckComboBox fx:id="downloadTypesSelection" GridPane.columnIndex="5" GridPane.columnSpan="5" />
            <Label text="%options.hplang" GridPane.columnSpan="4" GridPane.rowIndex="1" />
            <ComboBox fx:id="helppackLanguages" GridPane.columnIndex="5" GridPane.columnSpan="3" GridPane.rowIndex="1" />
            <Button fx:id="updateHelppackLanguages" mnemonicParsing="false" text="%update" GridPane.columnIndex="8" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <Label text="%options.uilang" GridPane.columnSpan="4" GridPane.rowIndex="2" />
            <ComboBox fx:id="uiLang" GridPane.columnIndex="5" GridPane.columnSpan="5" GridPane.rowIndex="2" />
            <CheckBox fx:id="shortcutCreationEnabled" alignment="CENTER" text="%option.shortcut.create" GridPane.columnSpan="10" GridPane.rowIndex="3" />
            <Label fx:id="downloadFolderLabel" text="Set by code" wrapText="true" GridPane.columnSpan="5" GridPane.rowIndex="4" />
            <Label fx:id="downloadFolderText" alignment="CENTER" text="Set by code" textOverrun="LEADING_ELLIPSIS" wrapText="true" GridPane.columnIndex="5" GridPane.columnSpan="3" GridPane.rowIndex="4">
                <font>
                    <Font name="Monospaced Regular" size="12.0" />
                </font>
                <padding>
                    <Insets right="7.0" />
                </padding>
            </Label>
            <Button fx:id="downloadFolderButton" alignment="CENTER" contentDisplay="CENTER" text="%options.choosefolder" GridPane.columnIndex="8" GridPane.columnSpan="2" GridPane.rowIndex="4" />
            <Label fx:id="installFolderLabel" text="Set by code" wrapText="true" GridPane.columnSpan="5" GridPane.rowIndex="5" />
